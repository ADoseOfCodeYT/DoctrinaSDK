{
    "version": 3,
    "configurePresets": 
    [
      {
        "name": "Windows-Base",
        "hidden": true,
        "generator": "Visual Studio 17 2022",
        "binaryDir": "${sourceDir}/BUILD/${presetName}",
        "installDir": "${sourceDir}/BUILD/install/${presetName}",
        "cacheVariables": {
          "CMAKE_C_COMPILER": "cl.exe",
          "CMAKE_CXX_COMPILER": "cl.exe"
        },
        "condition": {
          "type": "equals",
          "lhs": "${hostSystemName}",
          "rhs": "Windows"
        }
      },
        {
            "name": "x64-Debug",
            "displayName": "Debug",
            "inherits": "Windows-Base",
            "architecture": 
            {
                "value": "x64",
                "strategy": "external"
            },
            "cacheVariables": 
            {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "x64-Release",
            "displayName": "Release",
            "inherits": "Windows-Base",
            "architecture": 
            {
            "value": "x64",
            "strategy": "external"
            },
          "cacheVariables": 
          {
          "CMAKE_BUILD_TYPE": "Release"
          }
        }
    ]
}
